    <script>
        // 修改状态Start
        function changeStatus(obj,id){
            var num=$(obj).attr("num");
            if(num==1){
                num = 0;
            }else{
                num = 1;
            }
            $.ajax({
                url:"<?php echo e(route('Activity.isOn')); ?>",
                type:"post",
                data:{'_token':"<?php echo e(csrf_token()); ?>",'num':num,'act_id':id},
                dataType:"json",
                async:false,
                success:function (result) {
                    if (result == 1){
                        layer.msg("更新状态成功",{icon:6,time:1000});
                        location.reload();
                    }else{
                        layer.msg("更新状态失败",{icon:5,time:1000});
                    }
                }
            });
        }
        // 修改状态Over
        //        时间选择Start
            layui.use('laydate', function(){
                var laydate = layui.laydate;
                //执行一个laydate实例
                laydate.render({
                    elem: '#starttime' //开始时间
                    ,format: 'yyyy-MM-dd'
                });
                //自定义格式
                laydate.render({
                    elem: '#endtime'//结束时间
                    ,format: 'yyyy-MM-dd'
                });
            });
        //        时间选择Over
//        提示框Start
            if($(".page-hd .alert").text()!=""){
                layer.msg($(".page-hd .alert").text());
            }
//        提示框Over
    </script>
